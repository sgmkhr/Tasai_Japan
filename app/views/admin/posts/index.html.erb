<p class='guide-links'>
  <%= link_to I18n.t('top_page'), root_path %>>
  <%= link_to I18n.t('menu'),     admin_root_path %>>
  <%= I18n.t('posts.index.title') %>
</p>

<div class='section-title'>
  <h2>
    <% if @tag_name.present? %>
      #<%= @tag_name　%>
      <% if @posts.present? %>
        <%= ' ' + @posts.count.to_s + I18n.t('posts.index.count') %>
      <% end %>
    <% elsif @keyword.present? || @prefecture.present? %>
      <%= I18n.t('posts.index.prefecture') + I18n.t('enums.post.prefecture.' + @prefecture) %>
      </br><%= '「' + @keyword + '」' %>
    <% else %>
      <%= I18n.t('posts.index.title') %>
    <% end %>
  </h2>
</div>

<section>

  <%= render 'admin/posts/bars' %>

  <!--ソート切り替えリンク-->
  <div class='text-center py-2'>
  <%= link_to I18n.t('sort.latest'), admin_posts_path(latest: true) %>
  |<%= link_to I18n.t('sort.old'), admin_posts_path(old: true) %>
  |<%= link_to I18n.t('sort.favorites_count'), admin_posts_path(favorites_count: true) %>
  </div>

  <!--投稿一覧表示-->
  <%= render 'admin/posts/index', posts: @posts %>

</section>
