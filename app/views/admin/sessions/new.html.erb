<div class='section-title'><h2><%= I18n.t('admin.login_link') %></h2></div>

<section>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class='row justify-content-center'>
  
      <div class='form-group col-11 row'>
        <%= f.label :email, class: 'col-md-3' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control col-md-9' %>
      </div>
  
      <div class='form-group col-11 row'>
        <%= f.label :password, class: 'col-md-3' %><br />
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control col-md-9' %>
      </div>
  
      <% if devise_mapping.rememberable? %>
        <div class='field'>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
  
      <div class='actions col-11 text-right'>
        <%= f.submit I18n.t('login'), class: 'btn btn-sm success-btn' %>
      </div>
    
    </div>
  <% end %>

</section>