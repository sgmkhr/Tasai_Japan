<p class='guide-links'>
  <%= link_to I18n.t('top_page'),    root_path %>>
  <%= link_to I18n.t('menu'),        admin_root_path %>>
  <%= link_to I18n.t('menus.users'), admin_users_path %>>
  @<%= @user.canonical_name %>
</p>

<div class='section-title'><h2>@<%= @user.canonical_name %></h2></div>

<section>
  <div class='row justify-content-center'>

    <div class='col-md-4'>
      <p class='my-3'>
        <% if @user.is_active %>
          <p class='text-success'><strong>有効ユーザー</strong></p>
        <% else %>
          <p class='text-danger'><strong>退会済みユーザー</strong></p>
        <% end %>
      </p>
      <p class='mb-3'><strong><%= @user.public_name %></strong></p>
      <p class='mb-3'><%= I18n.t('users.show.position_start') + @user.position_i18n + I18n.t('users.show.position_end') %></p>
      <p><%= @user.introduction %></p>
    </div>

    <div class='col-md-6'>
      <!--ユーザーの投稿一覧表示予定-->
    </div>

  </div>
</section>