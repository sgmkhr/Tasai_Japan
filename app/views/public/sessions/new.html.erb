<section>

  <div class='section-title'><h2><%= I18n.t('login') %></h2></div>

  <div class='content-box'>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class='form-group row d-flex'>
        <%= f.label :email, class: 'col-md-3' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control col-9' %>
      </div>

      <div class='form-group row d-flex'>
        <%= f.label :password, class: 'col-md-3' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control col-9' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class='field'>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class='actions text-right'>
        <%= f.submit I18n.t('login'), class: 'btn btn-sm success-btn mr-2' %>
        <%= render 'public/shared/links' %>
      </div>
    <% end %>

  </div>
</section>
