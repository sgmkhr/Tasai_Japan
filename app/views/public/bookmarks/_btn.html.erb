<% if a_post.bookmarked_by?(current_user) %>

  <%= link_to post_bookmarks_path(a_post.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
    <% if a_post.user == current_user %>
      <%= a_post.bookmarks.count %>
    <% end %>
  <% end %>
  
<% else %>

  <%= link_to post_bookmarks_path(a_post.id), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark"></i>
    <% if a_post.user == current_user %>
      <%= a_post.bookmarks.count %>
    <% end %>
  <% end %>
  
<% end %>