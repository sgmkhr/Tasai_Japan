<%= form_with model: [a_post, comment], local: false do |f| %>

  <div class='row justify-content-center'>
    <div class='form-group col-md-5 col-8'>
      <%= f.text_field :content, placeholder: I18n.t('placeholder.comment'), class: 'form-control' %>
    </div>
    <div class='form-group mt-1'>
      <%= f.submit I18n.t('posts.show.comment'), class: 'btn btn-sm success-btn' %>
    </div>
  </div>
  
<% end %>