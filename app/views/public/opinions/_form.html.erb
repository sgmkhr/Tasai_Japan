<%= form_with model: [category, counseling_room, opinion], local: false do |f| %>

  <div class='row d-flex justify-content-center'>

    <div class='form-group col-9'>
      <%= f.text_area :content, class: 'form-control', placeholder: I18n.t('opinions.placeholder') %>
    </div>

    <div class='form-group mt-3'>
      <%= f.submit I18n.t('opinions.btn'), class: 'btn btn-sm success-btn' %>
    </div>

  </div>

<% end %>