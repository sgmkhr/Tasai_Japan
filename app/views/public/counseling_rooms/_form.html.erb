<%= form_with model: [category, counseling_room] do |f| %>
  
  <div class='form-group row d-flex no-shadow'>
    <%= f.label :topic_image, class: 'col-md-3' %>
    <label class='file-form ml-3'>
      <span><%= I18n.t('file_form.label') %></span> 
      <%= f.file_field :topic_image, accept: 'image/*', class: 'hidden ml-3' %>
    </label>
  </div>

  <div class='form-group row d-flex'>
    <%= f.label :tag_name, class: 'col-md-3' %>
    <%= f.text_field :tag_name, placeholder: I18n.t('placeholder.tag_name'), class: 'form-control col-md-7 col-10 ml-3' %>
  </div>

  <div class='form-group'>
    <%= f.label :topic, class: 'required' %>
    <%= f.text_field :topic, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :detail, class: 'required' %>
    <%= f.text_area :detail, class: 'form-control' %>
  </div>

  <div class='form-group text-right'>
    <%= f.submit btn_name, class: 'btn btn-sm success-btn' %>
  </div>

<% end %>