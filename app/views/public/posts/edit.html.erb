<p class='guide-links'>
  <%= link_to I18n.t('top_page'),    root_path %>>
  <%= link_to I18n.t('menu'),        menu_path %>>
  <%= link_to I18n.t('menus.posts'), posts_path %>>
  <%= link_to I18n.t('posts.show.title'), post_path(@post.id) %>
  <%= I18n.t('posts.edit.title') %>
</p>

<div class='section-title'><h2><%= I18n.t('posts.edit.title') %></h2></div>

<section>
  
  <%= render 'layouts/errors', obj: @post %>
  <%= render 'public/posts/form', a_post: @post, btn_name: I18n.t('update') %>
  <p class='text-right py-5'>
    <%= link_to I18n.t('posts.edit.destroy_btn'), post_path(@post.id), method: :delete, 'data-confirm' => I18n.t('posts.destroy.confirmation') %>
  </p>
  
</section>