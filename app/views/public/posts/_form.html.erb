<%= form_with model: a_post do |f| %>
  <div class='row justify-content-center'>
    
    <div class='form-group col-11 row no-shadow'>
      <%= f.label :post_image, class: 'col-md-3 required' %>
      <label class='file-form'>
        <span><%= I18n.t('file_form.label') %></span> 
        <%= f.file_field :post_image, accept: 'image/*', class: 'hidden ml-3' %>
      </label>
      <span id='file_name' class='ml-1'></span>
    </div>
  
    <div class='form-group col-11 row'>
      <%= f.label :title, class: 'col-md-3 required' %>
      <%= f.text_field :title, autofocus: true, class: 'form-control col-md-9' %>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :caption, class: 'col-md-3' %>
      <%= f.text_field :caption, class: 'form-control col-md-9' %>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :body, class: 'col-md-3' %>
      <%= f.text_area :body, class: 'form-control col-md-9' %>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :prefecture, class: 'col-md-3' %>
      <%= f.select :prefecture, Post.prefectures.keys.map {|k| [I18n.t("enums.post.prefecture.#{k}"), k]}, class: 'form-control col-md-9' %>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :address, class: 'col-md-3' %>
      <div class='col-md-9 row'>
        <%= f.text_field :zipcode, placeholder: I18n.t('placeholder.postal_code') ,class: 'form-control col-7 col-md-5' %>
        <%= f.text_field :address, class: 'form-control mt-2' %>
      </div>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :tag_name, class: 'col-md-3' %>
      <%= f.text_field :tag_name, placeholder: I18n.t('placeholder.tag_name'),class: 'form-control col-md-9' %>
    </div>
    
    <div class='form-group col-11 row'>
      <%= f.label :is_published, class: 'col-md-3' %>
      <%= f.select :is_published, [[I18n.t('posts.is_published.true'), true],[I18n.t('posts.is_published.false'), false]], class: 'form-control col-md-9' %>
    </div>
    
    <div class='actions col-11 text-right'>
      <%= f.submit btn_name, class: 'btn btn-sm success-btn' %>
    </div>
  
  </div>
<% end %>

<%= javascript_pack_tag 'display_post_image_file' %>
<%= javascript_pack_tag 'jpostal'%>
<script src="https://cdn.jsdelivr.net/npm/jquery-jpostal-ja@2.14.45/jquery.jpostal.min.js"></script>
