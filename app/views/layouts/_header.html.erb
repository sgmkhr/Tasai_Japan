<ul>
  
  <% if user_signed_in? %>
  
    <li class='mb-4'>
      <%= link_to menu_path do %>
        <i class="fa-solid fa-house"></i>
      <% end %>
    </li>
    
    <li id='notification-icon' class='mb-4'>
      <% if current_user.notifications.where(read: false).any? %>
        <span class='text-danger'>.</span>
      <% end %>
      <i class="fa-solid fa-bell"></i>
    </li>
    <div id='notifications-box'>
      <p class='text-right'>
        <span id='close-notification-box'>
            <i class="fa-solid fa-xmark"></i>
        </span>
      </p>
      </span>
      <% if current_user.notifications.where(read: false).any? %>
        <p class='disabled sm-font'><%= I18n.t('notifications.limited_by') %></p>
        <% current_user.notifications.where(read: false).limit(10).order(created_at: :desc).each do |notification| %>
          <p>ãƒ»<%= link_to notification.message, notification, method: :patch %></p>
        <% end %>
      <% else %>
        <p class='disabled text-center'><%= I18n.t('notifications.non_exist') %></p>
      <% end %>
    </div>
    
    <li class='mb-4'>
      <% if current_user.has_unread_chat? %>
        <span class='text-danger'>.</span>
      <% end %>
      <%= link_to user_chat_rooms_path(current_user.canonical_name) do %>
        <i class="fa-solid fa-envelope"></i>
      <% end %>
      
    </li>
    
    <li class='mb-4'>
      <%= link_to user_path(current_user.canonical_name) do %>
        <span class='responsive-disabled'><%= I18n.t('mypage') %></span>
        <span class='resposive-displayed'><i class="fa-solid fa-user-check"></i></span>
      <% end %>
    </li>
    
    <li class='mb-4'>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <span class='responsive-disabled'><%= I18n.t('signout') %></span>
        <span class='resposive-displayed'><i class="fa-solid fa-right-from-bracket"></i></span>
      <% end %>
    </li>
      
    <li class='responsive-disabled'>
      <%= link_to I18n.t('about'), about_path %>
    </li>
    
  <% elsif admin_signed_in? %>
  
    <li class='mb-4'>
      <%= link_to admin_root_path do %>
        <i class="fa-solid fa-house"></i>
      <% end %>
    </li>
    
    <li>
      <%= link_to destroy_admin_session_path, method: :delete do %>
        <span class='responsive-disabled'><%= I18n.t('signout') %></span>
        <span class='resposive-displayed'><i class="fa-solid fa-right-from-bracket"></i></span>
      <% end %>
    </li>
    
  <% else %>
  
    <li class='mb-4'>
      <%= link_to root_path do %>
        <i class="fa-solid fa-house"></i>
      <% end %>
    </li>
    
    <li class='mb-4'>
      <%= link_to new_user_registration_path do %>
        <span class='responsive-disabled'><%= I18n.t('signin') %></span>
        <span class='resposive-displayed'><i class="fa-solid fa-user-plus"></i></span>
      <% end %>
    </li>
    
    <li class='mb-4'>
      <%= link_to new_user_session_path do %>
        <span class='responsive-disabled'><%= I18n.t('login') %></span>
        <span class='resposive-displayed'><i class="fa-solid fa-right-to-bracket"></i></span>
      <% end %>
    </li>
    
    <li class='responsive-disabled'>
      <%= link_to I18n.t('about'), about_path %>
    </li>
    
  <% end %>
  
</ul>